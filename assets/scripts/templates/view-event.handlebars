<section data-id="{{event.id}}">
  <img src="public/on-on-foot.jpg" alt="On On foot" />
  <h2>{{event.name}}</h2>

  <h2 class="rsvp-message"></h2>
  <button class="rsvp" data-id="{{event.id}}">RSVP Yes!</button>
  <button class="un-rsvp" data-id="{{event.id}}" data-date="{{event.date}}">RSVP No :(</button>

  <p>Date:
    {{event.date}}
  </p>
  <p>Time:
    {{event.time}}
  </p>
  <p>Location:
    {{event.location}}
  </p>
  <p>Description:
    {{event.description}}
  </p>
  <p>Hare:
    {{event.hare}}
  </p>
  <p>Bag Car:
    {{event.bag_car}}
  </p>


  <h2 class="paid-update"></h2>
{{{twoLoops event.users event.attendees}}}

<button class="get-events">Get All Events</button>


{{#if event.editable}}

  <button class="update-event" data-id="{{event.id}}">Edit My Event</button>
  <button class="delete-event" data-id="{{event.id}}">Delete My Event</button>
  {{/if}}
</section>
